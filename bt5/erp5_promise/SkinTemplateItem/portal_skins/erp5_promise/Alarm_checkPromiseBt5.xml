if severity == 0:\n
  summary = "Nothing to do."\n
  detail = ""\n
else:\n
  summary = "Upgrade needed"\n
  detail = "Needed to install %s" % \', \'.join([x[1] for x in bt5_list])\n
active_result.edit(\n
  summary=summary, \n
  severity=severity,\n
  detail=detail)\n
\n
context.newActiveProcess().postResult(active_result)\n
