            <value> <string encoding="cdata"><![CDATA[

# The legal resignment delay depend of total days the employee worked in the current company\n
legal_delays = [{\'days\': 30 , \'delay\': \'1 jour\' },    # 1er mois d\'essai\n
                {\'days\': 60 , \'delay\': \'1 semaine\' }, # 2e mois d\'essai\n
                {\'days\': 730, \'delay\': \'1 mois\' },    # 2 premi\xc3\xa8res ann\xc3\xa9es\n
                {\'days\': 0,   \'delay\': \'2 mois\' } ]   # Apr\xc3\xa8s les 2 premi\xc3\xa8res ann\xc3\xa9es\n
\n
\n
paysheet        = context.getObject()\n
employee_object = paysheet.getDestinationSectionValue()\n
\n
\n
# Check required data\n
current_org = None\n
if hasattr(employee_object, "default_career"):\n
  current_org        = employee_object["default_career"].getSubordinationValue()\n
  current_start_date = employee_object["default_career"].getStartDate()\n
\n
if None in (current_org, current_start_date):\n
  return \'Not enough data to calculate\'\n
\n
  \n
# Calcul the total time in the company\n
total_time = 0\n
steps = employee_object.contentValues()\n
for step in steps:\n
  if step.getPortalType() == "Career" and step.getId() != "default_career":\n
    if step.getSubordinationValue() == current_org:\n
      try :\n
        diff = step.getStopDate() - step.getStartDate()\n
      except TypeError :\n
        diff = 0 \n
      if diff > 0:\n
        total_time += diff\n
\n
total_time = int(total_time + (DateTime() - current_start_date))\n
\n
\n
# Get the legal resignment delay\n
for i in xrange(len(legal_delays)):\n
  if i < len(legal_delays)-1:\n
    if legal_delays[i][\'days\'] >= total_time:\n
      return legal_delays[i][\'delay\']\n
  else:\n
    return legal_delays[i][\'delay\']\n


]]></string> </value>
