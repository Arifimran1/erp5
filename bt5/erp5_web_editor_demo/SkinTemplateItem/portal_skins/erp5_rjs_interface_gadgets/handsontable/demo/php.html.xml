        <div class="pad" data-jsfiddle="example1">\n
          <h2>PHP example</h2>\n
\n
          <p>This page loads and saves data on server. In this example, client side uses <b>$.ajax</b>. Server side uses\n
            <b>PHP with PDO (SQLite)</b>.</p>\n
\n
          <p>Please note. This page and the PHP scripts are a work in progress. They are not yet configured on GitHub.\n
            Please run it on your own localhost.</p>\n
\n
          <p>\n
            <button name="load">Load</button>\n
            <button name="save">Save</button>\n
            <button name="reset">Reset</button>\n
            <label><input type="checkbox" name="autosave" checked="checked" autocomplete="off"> Autosave</label>\n
          </p>\n
\n
          <div id="exampleConsole" class="console">Click "Load" to load data from server</div>\n
\n
          <div id="example1"></div>\n
\n
          <p>\n
            <button name="dump" data-dump="#example1" data-instance="hot" title="Prints current data source to Firebug/Chrome Dev Tools">\n
              Dump data to console\n
            </button>\n
          </p>\n
        </div>\n
      </div>\n
\n
      <div class="codeLayout">\n
        <div class="pad">\n
          <script>\n
            var\n
              $container = $("#example1"),\n
              $console = $("#exampleConsole"),\n
              $parent = $container.parent(),\n
              autosaveNotification,\n
              hot;\n
\n
            hot = new Handsontable($container[0], {\n
              columnSorting: true,\n
              startRows: 8,\n
              startCols: 3,\n
              rowHeaders: true,\n
              colHeaders: [\'Manufacturer\', \'Year\', \'Price\'],\n
              columns: [\n
                {},\n
                {},\n
                {}\n
              ],\n
              minSpareCols: 0,\n
              minSpareRows: 1,\n
              contextMenu: true,\n
              afterChange: function (change, source) {\n
                var data;\n
\n
                if (source === \'loadData\' || !$parent.find(\'input[name=autosave]\').is(\':checked\')) {\n
                  return;\n
                }\n
                data = change[0];\n
\n
                // transform sorted row to original row\n
                data[0] = hot.sortIndex[data[0]] ? hot.sortIndex[data[0]][0] : data[0];\n
\n
                clearTimeout(autosaveNotification);\n
                $.ajax({\n
                  url: \'php/save.php\',\n
                  dataType: \'json\',\n
                  type: \'POST\',\n
                  data: {changes: change}, // contains changed cells\' data\n
                  success: function () {\n
                    $console.text(\'Autosaved (\' + change.length + \' cell\' + (change.length > 1 ? \'s\' : \'\') + \')\');\n
\n
                    autosaveNotification = setTimeout(function () {\n
                      $console.text(\'Changes will be autosaved\');\n
                    }, 1000);\n
                  }\n
                });\n
              }\n
            });\n
\n
            $parent.find(\'button[name=load]\').click(function () {\n
              $.ajax({\n
                url: \'php/load.php\',\n
                dataType: \'json\',\n
                type: \'GET\',\n
                success: function (res) {\n
                  var data = [], row;\n
\n
                  for (var i = 0, ilen = res.cars.length; i < ilen; i++) {\n
                    row = [];\n
                    row[0] = res.cars[i].manufacturer;\n
                    row[1] = res.cars[i].year;\n
                    row[2] = res.cars[i].price;\n
                    data[res.cars[i].id - 1] = row;\n
                  }\n
                  $console.text(\'Data loaded\');\n
                  hot.loadData(data);\n
                }\n
              });\n
            }).click(); // execute immediately\n
\n
            $parent.find(\'button[name=save]\').click(function () {\n
              $.ajax({\n
                url: \'php/save.php\',\n
                data: {data: hot.getData()}, // returns all cells\' data\n
                dataType: \'json\',\n
                type: \'POST\',\n
                success: function (res) {\n
                  if (res.result === \'ok\') {\n
                    $console.text(\'Data saved\');\n
                  }\n
                  else {\n
                    $console.text(\'Save error\');\n
                  }\n
                },\n
                error: function () {\n
                  $console.text(\'Save error\');\n
                }\n
              });\n
            });\n
\n
            $parent.find(\'button[name=reset]\').click(function () {\n
              $.ajax({\n
                url: \'php/reset.php\',\n
                success: function () {\n
                  $parent.find(\'button[name=load]\').click();\n
                },\n
                error: function () {\n
                  $console.text(\'Data reset failed\');\n
                }\n
              });\n
            });\n
\n
            $parent.find(\'input[name=autosave]\').click(function () {\n
              if ($(this).is(\':checked\')) {\n
                $console.text(\'Changes will be autosaved\');\n
              }\n
              else {\n
                $console.text(\'Changes will not be autosaved\');\n
              }\n
            });\n
